<?xml version="1.0" encoding="utf-8"?>
<layout>

    <androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:aapt="http://schemas.android.com/aapt"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:background="@drawable/bottom_sheet_background">

        <com.airbnb.lottie.LottieAnimationView
            android:id="@+id/lottie_anim"
            android:layout_width="350dp"
            android:layout_height="350dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:lottie_autoPlay="true"
            app:lottie_loop="true"
            app:lottie_rawRes="@raw/circle_boost" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:animateLayoutChanges="true"
            app:layout_constraintBottom_toBottomOf="@+id/lottie_anim"
            app:layout_constraintEnd_toEndOf="@+id/lottie_anim"
            app:layout_constraintStart_toStartOf="@+id/lottie_anim"
            app:layout_constraintTop_toTopOf="@+id/lottie_anim">

            <com.google.android.material.card.MaterialCardView
                android:layout_width="200dp"
                android:layout_height="200dp"
                app:cardCornerRadius="300dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:strokeColor="@color/fore_accent"
                app:strokeWidth="5dp">

                <ImageView
                    android:id="@+id/app_icon"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="fitXY"
                    android:src="@drawable/tick_done" />
            </com.google.android.material.card.MaterialCardView>
        </androidx.constraintlayout.widget.ConstraintLayout>

        <TextView
            android:id="@+id/app_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:fontFamily="@font/poppins_semibold"
            android:maxLines="1"
            android:singleLine="true"
            android:text="PUBG MOBILE"
            android:textAlignment="center"
            android:textColor="@color/font"
            android:textSize="20sp"
            app:layout_constraintEnd_toEndOf="@+id/lottie_anim"
            app:layout_constraintStart_toStartOf="@+id/lottie_anim"
            app:layout_constraintTop_toBottomOf="@+id/lottie_anim" />

        <com.elevenappstudio.getdailydiamondguide.PillButton
            android:id="@+id/launch_app_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="30dp"
            android:visibility="invisible"
            app:chevronVisible="false"
            app:icon="@drawable/soft_bolt"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="@+id/app_name"
            app:layout_constraintStart_toStartOf="@+id/app_name"
            app:pillColor="@color/fore_accent"
            app:subtitleVisible="false"
            app:text="Launch Game"
            app:textColor="@color/colored_pill_font" />

        <com.elevenappstudio.getdailydiamondguide.DigitAnimationTextView
            android:id="@+id/boost_progress"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:layout_marginBottom="30dp"
            android:fontFamily="@font/poppins_bold"
            android:text="0%"
            android:textColor="@color/font"
            android:textSize="16sp"
            app:layout_constraintBottom_toTopOf="@+id/launch_app_btn"
            app:layout_constraintEnd_toEndOf="@+id/boost_progress_text"
            app:layout_constraintStart_toStartOf="@+id/boost_progress_text"
            app:layout_constraintTop_toBottomOf="@+id/boost_progress_text" />

        <TextView
            android:id="@+id/boost_progress_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/poppins_semibold"
            android:text="Cleaning..."
            android:textColor="@color/fore_accent"
            android:textSize="12sp"
            app:layout_constraintEnd_toEndOf="@+id/app_name"
            app:layout_constraintStart_toStartOf="@+id/app_name"
            app:layout_constraintTop_toBottomOf="@+id/app_name" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>

